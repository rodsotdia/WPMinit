{
  "name": "wpminit",
  "version": "0.2.1",
  "description": "A personal blank minimal theme for WordPress, to start any project from scratch.",
  "scripts": {
    "tailwind-dev-watch": "env NODE_ENV=development postcss assets/css/tailwind.css -o assets/css/build/tailwind.css --watch --verbose",
    "tailwind-dev": "env NODE_ENV=development postcss assets/css/tailwind.css -o assets/css/build/tailwind.css",
    "tailwind-prod": "env NODE_ENV=production postcss assets/css/tailwind.css -o assets/css/build/tailwind.css",
    "webpack-dev-watch": "webpack --watch --mode=development",
    "webpack-dev": "webpack --mode=development",
    "webpack-prod": "webpack --mode=production",
    "dev-watch": "start npm run webpack-dev-watch && start npm run tailwind-dev-watch",
    "dev": "npm run webpack-dev && npm run tailwind-dev",
    "build": "npm run webpack-prod && npm run tailwind-prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rodsotdia/WPMinit.git"
  },
  "author": "Rod Sot <hi@rodsot.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rodsotdia/WPMinit/issues"
  },
  "homepage": "https://github.com/rodsotdia/WPMinit#readme",
  "dependencies": {
    "autoprefixer": "^9.8.6",
    "css-loader": "^4.2.2",
    "cssnano": "^4.1.10",
    "postcss-cli": "^7.1.1",
    "style-loader": "^1.2.1",
    "tailwindcss": "^1.7.3",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
}
